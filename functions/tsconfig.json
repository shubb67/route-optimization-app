    "rootDir": "src",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "extends": "expo/tsconfig.base"
}
